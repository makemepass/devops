##Dockerfile
FROM nginx:alpine
RUN rm -rf /usr/share/nginx/html/*
COPY resume.html /usr/share/nginx/html/index.html
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]

##resume.html

